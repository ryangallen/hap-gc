<%= form_for(@pin) do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prohibited this pin from being saved:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td><h4><%= f.label :category %></h4></td>
      <td><%= f.text_field :category %></td>
    </tr>
    <tr>
      <td><h4><%= f.label :name %></h4></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><h4><%= f.label :address %></h4></td>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><h4><%= f.label :date %></h4></td>
      <td><%= f.date_select :date %></td>
    </tr>
    <tr>
      <td><h4><%= f.label :time %></h4></td>
      <td><%= f.time_select :time %></td>
    </tr>
    <tr>
      <td colspan="2">
        <h4><%= f.label 'Description' %></h4>
        <%= f.text_area :desc %>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="pin-cont">
        <%= link_to 'Cancel', pins_path %> <%= f.submit 'Pin It', :class => 'btn' %>
      </td>
    </tr>
  </table>
<% end %>