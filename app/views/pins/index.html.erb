<div class="cont">


</div>   

<table id="board-table">
    <tr id="board-cont">
        <td>   
            <!--<<%#= form_tag pins_path, :method => :get do %>
                <%#= text_field_tag :search, params[:search] %>
                <%#= submit_tag "Search Near", :name => nil %>
            <%# end %>-->
        </td>
        <td id="new-pin">
            <% if user_signed_in? %>
                <%= link_to 'New Pin', new_pin_path, :class => 'btn' %></td>
            <% end %>
    </tr>
    <tr>
        <td id="board">
            <%= gmaps4rails(@json) %>
        </td>
        <td id="flow">
            <% @pins.each do |pin| %>
                <div class="pin">
                    <h3><%= link_to pin.name, pin %></h3>
                    <h4><%= pin.address %></h4>
                    <h4><%= pin.date.strftime("%B %d, %Y") %> <%= pin.time.strftime("%H:%M") %></h4>
                    <p><%= pin.desc %></p>
                    <h5>Pinned by: <%= @pin.user.profile_name %></h5>
                    <p>
                        <%= link_to 'Edit', edit_pin_path(pin) %> |
                        <%= link_to 'Delete', pin, confirm: 'Are you sure?', method: :delete %>
                    </p>
                </div>
            <% end %>
        </td>
    </tr>
</table>